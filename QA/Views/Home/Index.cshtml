@{
    ViewBag.Title = "Home Page";

}
<style>
    .question {
        border: 2px solid #ccc;
        background-color: #eee;
        border-radius: 5px;
        padding: 16px;
        margin: 16px 0
    }

        .question::after {
            content: "";
            clear: both;
            display: table;
        }

        .question img {
            float: left;
            margin-right: 20px;
            border-radius: 50%;
        }

        .question span {
            font-size: 20px;
            margin-right: 15px;
        }

    .product__pagination,
    .blog__pagination {
        padding-top: 10px;
    }

        .product__pagination a,
        .blog__pagination a {
            display: inline-block;
            width: 30px;
            height: 30px;
            border: 1px solid #b2b2b2;
            font-size: 14px;
            color: #b2b2b2;
            font-weight: 700;
            line-height: 28px;
            text-align: center;
            margin-right: 16px;
            -webkit-transition: all, 0.3s;
            -moz-transition: all, 0.3s;
            -ms-transition: all, 0.3s;
            -o-transition: all, 0.3s;
            transition: all, 0.3s;
        }

            .product__pagination a:hover,
            .blog__pagination a:hover {
                background: #7fad39;
                border-color: #7fad39;
                color: #ffffff;
            }

            .product__pagination a:last-child,
            .blog__pagination a:last-child {
                margin-right: 0;
            }
</style>
@if (ViewBag.ThongBao != null)
{
    <script>
        alert("@Html.Raw(@ViewBag.ThongBao)")
    </script>
}
<!-- Top News Start-->
<div class="top-news">
    <div class="container">
        <div class="row">
            @Html.Action("Left", "Home")
            @Html.Action("Right", "Home")
        </div>
    </div>
</div>

<!-- Tab News Start-->
<div class="tab-news">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills nav-justified">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#m-viewed">Gần đây nhất</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#m-read">Xem nhiều</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#m-recent">Tạo câu hỏi</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div id="m-viewed" class="container tab-pane active ">
                        @if (ViewBag.Page == 1)
                        {
                            @Html.Action("RecentQuestion", "Question", new { page = ViewBag.pageNumber })
                        }
                        else
                        {
                            @Html.Action("RecentQuestion", "Question")
                        }

                    </div>
                    <div id="m-read" class="container tab-pane fade ">
                        @if (ViewBag.Page == 2)
                        {
                            @Html.Action("ViewQuestion", "Question", new { page = ViewBag.pageNumber })
                        }
                        else
                        {
                            @Html.Action("ViewQuestion", "Question")
                        }
                    </div>
                    @Html.Action("PostQuestion", "Question")
                </div>
            </div>
        </div>
    </div>
</div>
