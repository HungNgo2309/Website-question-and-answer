@model QA.Models.Account
@{
                /**/

                ViewBag.Title = "Detail";
                Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
<h3 style="text-align:center;">Thông tin tài khoản</h3>
@using (Html.BeginForm("Detail", "UserAD", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card-style mb-30">
        <div class="contact">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="contact-form">
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <input type="text" name="name" class="form-control" value="@Model.UserName" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="email" name="email" class="form-control" value="@Model.Email" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" name="id" class="form-control" value="@Model.IDAccount" hidden />
                                </div>
                                <label>Điểm của người dùng:@Model.Point </label>
                                <div class="form-group">
                                    @if (Model.Gender == true)
                                    {
                                        <lable>Nam</lable><input type="radio" value="1" name="GT" checked>
                                        <lable>Nữ</lable><input type="radio" value="0" name="GT">
                                    }
                                    else
                                    {
                                        <lable>Nam</lable><input type="radio" value="1" name="GT">
                                        <lable>Nữ</lable><input type="radio" value="0" name="GT" checked>
                                    }
                                </div>
                                <div><button class="btn" type="submit">Lưu thay đổi</button></div>
                            </form>

                            <h5>Số câu trả lời được bình chọn :@Html.Action("RankAn", "UserAD", new { id = Model.IDAccount }) câu</h5>
                            <h5>Tổng số lượt xem từ các bài đăng  : @Html.Action("RankQu", "UserAD", new { id = Model.IDAccount })" </h5>
                            <h5>Tổng số điểm bình chọn từ các bài đăng  :@Html.Action("RankPointQu", "UserAD", new { id = Model.IDAccount })điểm</h5>
                            <h4 style="font-weight:bold">Danh Hiệu</h4>
                            <p>@Html.Action("InfoRank", "UserAD", new { id = Model.IDAccount })</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="contact-info">
                            <img style="width:50%;" src="~/Content/Images/avatar/@Model.Avatar" />
                            <input type="file" name="fFileUpload" />
                        </div>
                    </div>


                </div>
            </div>
        </div>
        </div>
        <!-- Contact End -->
        }

