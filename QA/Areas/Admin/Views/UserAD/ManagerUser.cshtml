@model IEnumerable<QA.Models.Account>
@{
    ViewBag.Title = "ManagerUser";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>ManagerUser</h2>
<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="table-wrapper table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th><h6>Tên người dùng</h6></th>
                                <th><h6>Email</h6></th>
                                <th><h6>Giới tính</h6></th>
                                <th><h6>Quản lí</h6></th>
                            </tr>
                            <!-- end table row-->
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="min-width">
                                        <div class="lead">
                                            <div class="lead-image">
                                                <img src="~/Content/Images/avatar/@item.Avatar"
                                                     alt="" />
                                            </div>
                                            <div class="lead-text">
                                                <p>@item.UserName</p>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="min-width">
                                        <p>@item.Email</p>
                                    </td>
                                    <td class="min-width">
                                        @if (item.Gender == true)
                                        {
                                            <p>Name</p>
                                        }
                                        else { <p>Nữ</p>}
                                    </td>
                                    <td>
                                        <div class="action">
                                            <button class="text-danger">
                                                <a href="@Url.Action("Delete","UserAD", new { id=item.IDAccount})"> <i class="lni lni-trash-can"></i></a>
                                            </button>
                                            <button>
                                                <a href="@Url.Action("Detail","UserAD",new {id = item.IDAccount })"><i class="lni lni-pencil"></i></a>
                                            </button>
                                            @if (item.Block == 0)
                                            {
                                                <button>
                                                    <a href="@Url.Action("Block","UserAD",new {id = item.IDAccount })" class=" btn btn-block">Khóa</a>
                                                </button>
                                            }
                                            else
                                            {
                                                <button>
                                                    <a href="@Url.Action("Block","UserAD",new {id = item.IDAccount })" class=" btn btn-primary">Mở khóa</a>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- end table -->
                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
</div>
