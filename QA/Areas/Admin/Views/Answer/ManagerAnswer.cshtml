@model IEnumerable<QA.Models.Answer>
@{
    ViewBag.Title = "ManagerAnswer";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Câu hỏi : @ViewBag.Topic</h2>
<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="table-wrapper table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th><h6>Người đăng</h6></th>
                                <th><h6>Câu trả lời</h6></th>
                                <th><h6>Quản lí</h6></th>
                            </tr>
                            <!-- end table row-->
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="min-width">
                                        <div class="lead">
                                            <div class="lead-image">
                                                <img src="~/Content/Images/avatar/@item.Account.Avatar"
                                                     alt="" />
                                            </div>
                                            <div class="lead-text">
                                                <p>@item.Account.UserName</p>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="min-width">
                                        <p><a href="@Url.Action("Detail","Answer",new { idas=item.IDAnswer})">@item.Content</a></p>
                                    </td>
                                    <td>
                                        <div class="action">
                                            <button class="text-danger">
                                                <a href="@Url.Action("Delete","Answer",new { idas=item.IDAnswer})"> <i class="lni lni-trash-can"></i></a>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- end table -->
                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
</div>

